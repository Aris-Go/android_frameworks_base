java_defaults {
    name: "TetheringTestsDefaults",
    certificate: "platform",
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    static_libs: [
        "androidx.test.ext.junit",
        "androidx.test.rules",
        "frameworks-base-testutils",
        "kotlin-reflect",
        "net-tests-utils",
        "testables",
    ],
    libs: [
        "android.test.runner",
        "android.test.base",
        "android.test.mock",
    ],
    jni_libs: [
        // For mockito extended
        "libdexmakerjvmtiagent",
        "libstaticjvmtiagent",
    ],
    jarjar_rules: "jarjar-rules.txt",
}

// Library containing the unit tests. This is used by the coverage test target to pull in the
// unit test code. It is not currently used by the tests themselves because all the build
// configuration needed by the tests is in the TetheringTestsDefaults rule.
android_library {
    name: "TetheringTestsLib",
    static_libs: ["TetheringApiCurrentLib"],
    defaults: ["TetheringTestsDefaults"],
    // TODO(b/147200698) change sdk_version to module-current and
    // remove framework-minus-apex, ext, and framework-res
    sdk_version: "core_platform",
    libs: [
        "framework-minus-apex",
        "ext",
        "framework-res",
        "framework-tethering",
    ],
    visibility: [
        "//frameworks/base/packages/Tethering/tests/integration",
    ]
}

android_test {
    name: "TetheringTests",
    test_suites: ["device-tests"],
    static_libs: ["TetheringApiCurrentLib"],
    defaults: ["TetheringTestsDefaults"],
    compile_multilib: "both",
    // TODO(b/147200698) change sdk_version to module-current and
    // remove framework-minus-apex, ext, and framework-res
    sdk_version: "core_platform",
    libs: [
        "framework-minus-apex",
        "ext",
        "framework-res",
        "framework-tethering",
    ],
}
