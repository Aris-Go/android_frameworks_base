java_defaults {
    name: "TetheringIntegrationTestsDefaults",
    srcs: [
        "src/**/*.java",
        "src/**/*.kt",
    ],
    static_libs: [
        "androidx.test.rules",
        "frameworks-base-testutils",
        "mockito-target-extended-minus-junit4",
        "net-tests-utils",
        "testables",
    ],
    libs: [
        "android.test.runner",
        "android.test.base",
        "android.test.mock",
    ],
    visibility: ["//visibility:private"],
}

android_library {
    name: "TetheringIntegrationTestsLib",
    platform_apis: true,
    static_libs: ["NetworkStackApiStableLib"],
    defaults: ["TetheringIntegrationTestsDefaults"],
}

android_test {
    name: "TetheringIntegrationTests",
    certificate: "platform",
    platform_apis: true,
    test_suites: [
        "device-tests",
    ],
    static_libs: ["NetworkStackApiStableLib"],
    defaults: ["TetheringIntegrationTestsDefaults"],
}

// Special version of the tethering tests that includes all tests necessary for code coverage
// purposes. This is currently the union of TetheringTests, TetheringIntegrationTests and
// NetworkStackTests.
android_test {
    name: "TetheringCoverageTests",
    test_suites: ["device-tests", "mts"],
    test_config: "AndroidTest_Coverage.xml",
    static_libs: [
        "NetworkStackTestsLib",
        "TetheringTestsLib",
        "TetheringIntegrationTestsLib",
    ],
    compile_multilib: "both",
    manifest: "AndroidManifest_coverage.xml",
}