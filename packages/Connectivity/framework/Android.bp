cc_library_shared {
    name: "libframework-connectivity",
    // TODO: build against the NDK (sdk_version: "30" for example)
    cflags: [
        "-Wall",
        "-Werror",
        "-Wno-unused-parameter",
        "-Wthread-safety",
    ],
    srcs: [
        "jni/android_net_NetUtils.cpp",
    ],
    shared_libs: [
        "libbase",
        "liblog",
        "libnativehelper",
        // TODO: consider moving ifc_[add/del]_address, to a static lib in frameworks/libs/net,
        // or if the dependency on libnetutils is kept, it needs to build against the NDK and be
        // linked statically.
        // "libnetutils",
        "libnetd_client",
    ],
    header_libs: [
        "dnsproxyd_protocol_headers",
    ],
    apex_available: [
        "//apex_available:platform",
        "com.android.tethering",
    ],
}
