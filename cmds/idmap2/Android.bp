cc_binary {
    name: "idmap2d",
    host_supported: false,
    clang: true,
    tidy: true,
    tidy_checks: [
        // remove google-default-arguments or clang-tidy will complain about
        // the auto-generated file IIdmap2.cpp
        "-google-default-arguments",
    ],
    tidy_flags: [
        "-system-headers",
        "-warnings-as-errors=*",
    ],
    srcs: [
        ":idmap2_aidl",
        "idmap2d/Idmap2Service.cpp",
        "idmap2d/Main.cpp",
    ],
    shared_libs: [
        "libandroidfw",
        "libbase",
        "libbinder",
        "libcutils",
        "libidmap2",
        "libutils",
        "libziparchive",
    ],
    init_rc: ["idmap2d/idmap2d.rc"],
}

filegroup {
    name: "idmap2_aidl",
    srcs: [
        "idmap2d/aidl/android/os/IIdmap2.aidl",
    ],
}
